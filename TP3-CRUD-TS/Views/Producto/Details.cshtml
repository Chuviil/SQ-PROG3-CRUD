@model TP3_CRUD_TS.Models.Producto

@{
    ViewData["Title"] = "Detalle de Producto";
}

<h1>@ViewData["Title"]</h1>
<p>En esta pagina se muestra el detalle de un producto</p>

<div class="border-b border-gray-900/10 pb-3">
    <label class="block text-sm font-medium leading-6 text-gray-900">ID</label>
    <div class="relative mt-2 rounded-md shadow-sm">
        <input asp-for="IdProducto" class="block w-full rounded-mdb border-0 py-1.5 pl-5 pr-20 text-gray-900 
            ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset
            focus:ring-indigo-600 sm:text-sm sm:leading-6" disabled/>
    </div>
    <label class="block text-sm font-medium leading-6 text-gray-900">Nombre</label>
    <div class="relative mt-2 rounded-md shadow-sm">
        <input asp-for="Nombre" class="block w-full rounded-mdb border-0 py-1.5 pl-5 pr-20 text-gray-900 
            ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset
            focus:ring-indigo-600 sm:text-sm sm:leading-6" disabled/>
    </div>
    <label class="block text-sm font-medium leading-6 text-gray-900">Descripcion</label>
    <div class="relative mt-2 rounded-md shadow-sm">
        <input asp-for="Descripcion" class="block w-full rounded-mdb border-0 py-1.5 pl-5 pr-20 text-gray-900 
            ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset
            focus:ring-indigo-600 sm:text-sm sm:leading-6" disabled/>
    </div>
    <label class="block text-sm font-medium leading-6 text-gray-900">Cantidad</label>
    <div class="relative mt-2 rounded-md shadow-sm">
        <input asp-for="Cantidad" class="block w-full rounded-mdb border-0 py-1.5 pl-5 pr-20 text-gray-900 
            ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset
            focus:ring-indigo-600 sm:text-sm sm:leading-6" disabled/>
    </div>
</div>

<div class="mt-3 flex items-center justify-start gap-x-6">
    <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white 
        shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 
        focus-visible:outline-indigo-600">
        Editar
    </a>
    <a asp-action="Index" type="button" class="text-sm font-semibold leading-6 text-gray-900">Regresar</a>
</div>